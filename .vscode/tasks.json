{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "leetcode.cpp",
            "type": "shell",
            "command": "clang++",
            "args": [
                "leetcode.cpp",
                "problems.cpp",
                "-std=c++11",
                "-o",
                "${fileDirname}/leetcode.out",
                "-g"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}